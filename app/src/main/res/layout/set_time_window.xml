<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setTimeLayout"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    >

    <EditText
        android:layout_marginLeft="8dp"
        android:selectAllOnFocus="true"
        android:id="@+id/etMin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:inputType="number"
        android:digits="1234567890"
        android:gravity="center"
        android:maxLength="2"
        >
    </EditText>
    <TextView
        android:id="@+id/labelMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/etMin"
        android:layout_alignBottom="@+id/etMin"
        android:layout_marginRight="4dp"
        ></TextView>
    <EditText
        android:id="@+id/etSec"
        android:selectAllOnFocus="true"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/labelMin"
        android:text=""
        android:textSize="18sp"
        android:inputType="number"
        android:digits="1234567890"
        android:gravity="center"
        android:maxLength="2"
        >
    </EditText>
    <TextView
        android:id="@+id/labelSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="秒"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/etSec"
        android:layout_alignBottom="@+id/etSec"
        ></TextView>



</RelativeLayout>