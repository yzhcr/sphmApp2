<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nju.sphm.Controller.ChooseProjectsActivity.ChooseTestProject">

    <TextView
        android:id="@+id/title"
        android:layout_height="45dp"
        android:layout_width="fill_parent"
        android:text="选择项目"
        android:textSize="28sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#009DD9"
        />
    <RelativeLayout
        android:id="@+id/changeTestDataLayout"
        android:layout_below="@id/title"
        android:layout_height="45dp"
        android:layout_width="fill_parent"
        android:background="#CCCCCC"
        >
        <TextView
            android:text="测试数据:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"/>
        <TextView
            android:text="2014-2015国标上报数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chosetestdata"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="编辑"
            android:textSize="20sp"
            android:id="@+id/changeTestData"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择项目"
        android:id="@+id/chooseTestProject"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp" />
</RelativeLayout>
