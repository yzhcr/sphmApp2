<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nju.sphm.Controller.ChooseProjectsActivity.ChooseTestProject">

    <TextView
        android:id="@+id/title"
        android:layout_height="45dp"
        android:layout_width="fill_parent"
        android:text="选择项目"
        android:textSize="28sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#009DD9"
        />
    <RelativeLayout
        android:id="@+id/changeTestDataLayout"
        android:layout_below="@id/title"
        android:layout_height="45dp"
        android:layout_width="fill_parent"
        android:background="#CCCCCC"
        >
        <TextView
            android:text="测试数据:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"/>
        <TextView
            android:text="2014-2015国标上报数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chosetestdata"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="编辑"
            android:textSize="20sp"
            android:id="@+id/changeTestData"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/changeTestDataLayout"
        android:numColumns="auto_fit"
        android:verticalSpacing="20dp"
        android:horizontalSpacing="10dp"
        android:columnWidth="90dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        </GridView>
    <LinearLayout
        android:gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="下载"
            android:textSize="23sp"
            android:textColor="#FFFFFF"
            android:background="#33CC66"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="上传"
            android:textSize="23sp"
            android:textColor="#FFFFFF"
            android:background="#ffff261a"
            android:layout_weight="1"/>
    </LinearLayout>
    <WebView
        android:layout_below="@id/gridview"
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>

</RelativeLayout>
